<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/right"
        android:layout_height="wrap_content">

      <TextView
          android:id="@+id/fvname"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:text="Bananas"
          android:textSize="16dp"
          android:textStyle="bold"

          />
<!--      <TextView-->
<!--          android:layout_width="wrap_content"-->
<!--          android:layout_height="wrap_content"-->
<!--          android:text="12 pieces"-->
<!--          android:id="@+id/quantiy"-->
<!--          android:textColor="#ADAAAA"-->
<!--          android:textSize="14dp"-->
<!--          android:layout_marginTop="16dp"-->
<!--          />-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/right"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Rs."
          android:visibility="gone"
          android:padding="16dp"
          android:textSize="14dp"
          android:layout_marginLeft="80dp"
          android:layout_toRightOf="@+id/fvname"
          android:id="@+id/rs"
          />

      <TextView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:text="-"
          android:textColor="@color/green"
          android:gravity="center"
          android:textSize="25dp"
          android:layout_marginTop="5dp"
          android:layout_toRightOf="@+id/total"
          android:id="@+id/minus"
          android:background="@drawable/circle"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="2"
          android:textColor="@color/green"
          android:layout_marginTop="5dp"
          android:textSize="18dp"
          android:layout_marginHorizontal="10dp"
          android:layout_toRightOf="@+id/minus"
          android:id="@+id/no"
          />
      <TextView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:text="+"
          android:textSize="20dp"
          android:textColor="@color/green"
          android:layout_marginTop="5dp"
          android:gravity="center"
          android:layout_toRightOf="@+id/no"
          android:layout_marginBottom="5dp"
          android:id="@+id/plus"
          android:background="@drawable/circle"
          />
    </LinearLayout>
  </RelativeLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#ADAAAA"
      android:layout_marginTop="8dp"
      android:layout_marginHorizontal="10dp"></View>

</LinearLayout>
